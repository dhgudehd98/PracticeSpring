<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="jpatest">
        <class>com.sh.app.chroling.entity.ChrolingData</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/chrolingdb"/>
            <property name="jakarta.persistence.jdbc.user" value="sh"/>
            <property name="jakarta.persistence.jdbc.password" value="sh"/>
<!--         실행하는 sql 구문을 여러줄에 걸쳐 확인하기 위한 속성-->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>


            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>
</persistence>